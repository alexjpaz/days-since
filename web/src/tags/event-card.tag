<event-card>
  <div class="card">
    <div class="card-content">
      <a href='#{opts.name}' ><span class="card-title">{ opts.name }</span></a>
      <p class='jumbo'>{ opts.days }</p>
    </div>
    <div class="card-action">
      <a href="#">Reset</a>
    </div>
  </div>
  <style scope>
    .jumbo {
      font-size: 4em;
    }

    a {
      padding-top: 100px;
    }
  </style>
</event-card>
